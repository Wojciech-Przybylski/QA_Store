pipeline {
    agent any
    enviroment{
        SecretKey=credentials('SecretKey')
    }
    stages {
        stage('Build') {
            steps {
                sh "sudo apt install -y python3-pip"
                sh "export SecretKey=${SecretKey}"
                sh "env"
            }
        }
        stage('Dependencies') {
            steps {
                sh "pip install -r App/requirements.txt"
            }
        }
        stage('Deploy') {
            steps {
                sh "python3 App/app.py"
            }
        }
    }
}